                        FontFamily="Cascadia Mono"
                        FontSize="15"
                        Foreground="#FFB4B4B4"
                        Width="267" />
                    <Button 
                        x:Name="UniversitiesExportBtn1" 
                        Content="Export" 
                        HorizontalAlignment="Left" 
                        Margin="998,8,0,0"
                        VerticalAlignment="Top" 
                        Height="27"
                        Width="91" 
                        Background="#4F60BB" 
                        Foreground="#FFB4B4B4"
                        Click="UniversitiesExportBtn_Click"/>
                </Grid>
            </TabItem>

