                        Background="RoyalBlue"
                        Foreground="#FFB4B4B4"
                        HorizontalAlignment="Left"
                        Width="80"
                        Height="80"
                        VerticalAlignment="Top"
                        Margin="913,5,0,0">
                        <StackPanel>
                            <materialDesign:PackIcon
                                Kind="FileDocumentArrowRightOutline"
                                Height="50"
                                Width ="50"
                                Foreground="LightGray"/>
                        </StackPanel>
                    </Button>
                </Grid>
