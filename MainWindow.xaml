                        <materialDesign:PackIcon
                            Kind="DatabaseEyeOutline"
                            Width="50"
                            Height="50"
                            Foreground="LightGray"
                            x:Name="ParsedUnivsPic"
                            HorizontalAlignment="Center"/>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="Загруженные"
                            Margin="5,0,0,0"
